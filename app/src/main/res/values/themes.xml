<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAnimeView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/md_theme_light_inverseOnSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/md_theme_light_background</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!--Default m3 design colors-->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>
    <!--BottomNavBar-->
    <style name="BottomNavBarStyle">
        <item name="android:outlineSpotShadowColor">@color/md_theme_light_outline</item>
        <item name="itemActiveIndicatorStyle">@style/CustomIndicatorStyle</item>
    </style>
    <style name="CustomIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/md_theme_light_inverseOnSurface</item>
    </style>
    <!--TabLayout-->
    <style name="TabLayoutStyle" parent= "@style/Widget.Material3.TabLayout.Secondary">
        <item name="android:background">@color/md_theme_light_inverseOnSurface</item>
        <item name="tabIndicator">@drawable/corner_background</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/md_theme_light_outline</item>
        <item name="tabIndicatorColor">@color/md_theme_light_outline</item>
    </style>
    <!--ToolBar-->
    <style name="ToolBarStyle">
        <item name="iconTint" >@color/md_theme_light_onSurface</item>
        <item name="android:background">@color/md_theme_light_inverseOnSurface</item>
    </style>
    <!--AnimeBackground-->
    <style name="AnimeBackground">
        <item name="android:background">@drawable/anime_item_background_light</item>
    </style>
    <!--TextWithDrawableTint-->
    <style name="TextIconTintStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:drawableTint">@color/md_theme_light_outline</item>
    </style>
    <!--Switch-->
    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="trackTint">@color/md_theme_light_outlineVariant</item>
        <item name="thumbTint">@color/switch_selector_light</item>
    </style>
    <!--Button-->
    <style name="buttonStyle">
        <item name="android:backgroundTint">@color/md_theme_light_inverseOnSurface</item>
        <item name="android:drawableTint">@color/md_theme_light_outline</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    <!--PrimaryButton-->
    <style name="primaryButtonStyle">
        <item name="android:backgroundTint">@color/md_theme_light_secondary</item>
        <item name="iconTint">@color/md_theme_light_onSecondary</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
    </style>
    <!--ScrollHelperStyle-->
    <style name="scrollHelperStyle">
        <item name="cardBackgroundColor">@color/md_theme_light_outline</item>
    </style>
    <!--AlertDialog-->
    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>
    <!--CardViewBackgroundStyle-->
    <style name="CardViewBackground">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_inverseOnSurface</item>
        <item name="cardElevation">0dp</item>
    </style>
    <!--BackgroundedTextView-->
    <style name="BackgroundedTextView" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:background">@drawable/anime_item_background_light</item>
        <item name="android:textColor">@color/md_theme_dark_inverseOnSurface</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:drawableTint">@color/md_theme_dark_outlineVariant</item>
    </style>
    <!--WhiteBlackTitle-->
    <style name="WhiteBlackTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--ProgressIndicator-->
    <style name="ProgressIndicatorStyle">
        <item name="indicatorColor">@color/md_theme_light_outline</item>
        <item name="trackColor">@color/md_theme_light_outlineVariant</item>
    </style>
    <!--Material3TextWithDrawable-->
    <style name="Material3TextWithDrawable" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:drawableTint">@color/md_theme_light_outline</item>
    </style>
    <!--Material3TitleWithDrawable-->
    <style name="Material3TitleWithDrawable" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:drawableTint">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    <!--BottomSheetBackground-->
    <style name="BottomSheetBackground">
        <item name="android:background">@drawable/bottom_sheet_background_light</item>
    </style>
</resources>