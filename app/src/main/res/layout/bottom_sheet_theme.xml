<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheetBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/scrollHelperStyle"
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp" />

    <ScrollView
        android:id="@+id/themeScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/openingEndingsText"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            tools:text="Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings and endigns Openings an" />
    </ScrollView>
</LinearLayout>