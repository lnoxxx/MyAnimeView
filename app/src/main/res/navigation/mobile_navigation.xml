<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tops">

    <fragment
        android:id="@+id/navigation_recommendation"
        android:name="com.lnoxx.myanimeview.ui.recommendation.RecommendationFragment"
        android:label="@string/recommendation_fragment_title"
        tools:layout="@layout/fragment_recommendation" >
        <action
            android:id="@+id/action_navigation_recommendation_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_recommendation_to_animeViewFragment"
            app:destination="@id/animeViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tops"
        android:name="com.lnoxx.myanimeview.ui.tops.TopsFragment"
        android:label="@string/top_fragment_title"
        tools:layout="@layout/fragment_tops" >
        <action
            android:id="@+id/action_navigation_tops_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_tops_to_animeViewFragment"
            app:destination="@id/animeViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.lnoxx.myanimeview.ui.favorite.FavoriteFragment"
        android:label="@string/favorite_fragment_title"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.lnoxx.myanimeview.ui.search.SearchFragment"
        android:label="@string/search_title"
        tools:layout="@layout/fragment_search_fragement" >
        <action
            android:id="@+id/action_searchFragment_to_searchResultFragment2"
            app:destination="@id/searchResultFragment2"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/animeViewFragment"
        android:name="com.lnoxx.myanimeview.ui.animeView.AnimeViewFragment"
        android:label="@string/anime_toolbar_title"
        tools:layout="@layout/fragment_anime_view" >
        <action
            android:id="@+id/action_animeViewFragment_to_relatedFragment"
            app:destination="@id/relatedFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_animeViewFragment_to_allCommentsFragment"
            app:destination="@id/allCommentsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_animeViewFragment_to_charactersFragment"
            app:destination="@id/charactersFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_animeViewFragment_to_searchResultFragment2"
            app:destination="@id/searchResultFragment2" />
    </fragment>
    <fragment
        android:id="@+id/relatedFragment"
        android:name="com.lnoxx.myanimeview.ui.related.RelatedFragment"
        android:label="@string/related_fragment_title"
        tools:layout="@layout/fragment_related" />
    <fragment
        android:id="@+id/allCommentsFragment"
        android:name="com.lnoxx.myanimeview.ui.allComments.AllCommentsFragment"
        android:label="@string/comments"
        tools:layout="@layout/fragment_all_comments" />
    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.lnoxx.myanimeview.ui.charactersFragment.CharactersFragment"
        android:label="@string/characters"
        tools:layout="@layout/fragment_characters" />
    <fragment
        android:id="@+id/searchResultFragment2"
        android:name="com.lnoxx.myanimeview.ui.search_result.SearchResultFragment"
        android:label="@string/search_result_label"
        tools:layout="@layout/fragment_search_result" >
        <action
            android:id="@+id/action_searchResultFragment2_to_animeViewFragment"
            app:destination="@id/animeViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>