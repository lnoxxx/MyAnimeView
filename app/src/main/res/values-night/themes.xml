<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAnimeView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/md_theme_light_inverseSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_background</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!--Default m3 design colors-->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_outlineVariant</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_outlineVariant</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_outlineVariant</item>
    </style>
    <!--BottomNavBar-->
    <style name="BottomNavBarStyle">
        <item name="android:outlineSpotShadowColor">@color/md_theme_dark_outline</item>
        <item name="itemActiveIndicatorStyle">@style/CustomIndicatorStyle</item>
        <item name="itemIconTint">@color/md_theme_dark_onSurface</item>
    </style>
    <style name="CustomIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/md_theme_light_inverseSurface</item>
    </style>
    <!--TabLayout-->
    <style name="TabLayoutStyle" parent= "@style/Widget.Material3.TabLayout.Secondary">
        <item name="android:background">@color/md_theme_light_inverseSurface</item>
        <item name="tabIndicator">@drawable/corner_background</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/md_theme_dark_onSurface</item>
        <item name="tabIndicatorColor">@color/md_theme_dark_onSurface</item>
    </style>
    <!--ToolBar-->
    <style name="ToolBarStyle">
        <item name="iconTint" >@color/md_theme_dark_onSurface</item>
        <item name="android:background">@color/md_theme_light_inverseSurface</item>
    </style>
    <style name="ToolBarTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:drawableTint">@color/md_theme_dark_onSurface</item>
    </style>
    <!--AnimeBackground-->
    <style name="AnimeBackground">
        <item name="android:background">@drawable/anime_item_background_dark</item>
    </style>
    <!--TextWithDrawableTint-->
    <style name="TextIconTintStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:drawableTint">@color/md_theme_dark_outline</item>
    </style>
    <!--Button-->
    <style name="buttonStyle">
        <item name="android:backgroundTint">@color/md_theme_light_inverseSurface</item>
        <item name="android:drawableTint">@color/md_theme_dark_outline</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
    </style>
    <!--PrimaryButton-->
    <style name="primaryButtonStyle">
        <item name="android:backgroundTint">@color/md_theme_dark_secondary</item>
        <item name="iconTint">@color/md_theme_dark_onSecondary</item>
        <item name="android:textColor">@color/md_theme_dark_onSecondary</item>
    </style>
    <!--ScrollHelperStyle-->
    <style name="scrollHelperStyle">
        <item name="cardBackgroundColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    <!--AlertDialog-->
    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/md_theme_light_inverseSurface</item>
    </style>
    <!--CardViewBackgroundStyle-->
    <style name="CardViewBackground">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_inverseSurface</item>
        <item name="cardElevation">0dp</item>
    </style>
    <!--BackgroundedTextView-->
    <style name="BackgroundedTextView" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:background">@drawable/anime_item_background_dark</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:drawableTint">@color/md_theme_dark_onSurfaceVariant</item>
    </style>
    <!--WhiteBlackTitle-->
    <style name="WhiteBlackTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--ProgressIndicator-->
    <style name="ProgressIndicatorStyle">
        <item name="indicatorColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="trackColor">@color/md_theme_dark_outlineVariant</item>
    </style>
    <!--Material3TextWithDrawable-->
    <style name="Material3TextWithDrawable" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:drawableTint">@color/md_theme_dark_outline</item>
    </style>
    <!--Material3TitleWithDrawable-->
    <style name="Material3TitleWithDrawable" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:drawableTint">@color/md_theme_dark_onSurface</item>
    </style>
    <!--BottomSheetBackground-->
    <style name="BottomSheetBackground">
        <item name="android:background">@drawable/bottom_sheet_background_dark</item>
    </style>
    <!--CommentBackground-->
    <style name="CommentBackground">
        <item name="android:background">@drawable/comment_background_dark</item>
    </style>
    <!--DropdownMenu-->
    <style name="DropdownMenu" parent="Material3TextWithDrawable">
        <item name="dropDownBackgroundTint">@color/md_theme_light_inverseSurface</item>
        <item name="simpleItemSelectedColor">@color/md_theme_dark_surfaceVariant</item>
    </style>
    <!--SliderTheme-->
    <style name="SliderTheme" parent="Widget.Material3.Slider">
        <item name="trackColorInactive">@color/md_theme_dark_outlineVariant</item>
        <item name="trackColorActive">@color/md_theme_dark_primary</item>
        <item name="trackHeight">8dp</item>
        <item name="tickColorActive">@color/md_theme_dark_primary</item>
        <item name="tickColorInactive">@color/md_theme_dark_outlineVariant</item>
        <item name="tickRadiusActive">2dp</item>
        <item name="tickRadiusInactive">4dp</item>
        <item name="thumbElevation">0dp</item>
        <item name="thumbColor">@color/md_theme_dark_primary</item>
        <item name="thumbRadius">12dp</item>
    </style>
    <!--Switch-->
    <style name="SwitchStyle" parent="Material3TextWithDrawable" >
        <item name="trackTint">@color/switch_selector_dark</item>
    </style>
    <!--RedButton-->
    <style name="RedButton">
        <item name="iconTint">@color/md_theme_dark_errorContainer</item>
        <item name="backgroundTint">@color/md_theme_dark_error</item>
        <item name="android:textColor">@color/md_theme_dark_errorContainer</item>
    </style>

    <style name="chipStyle" parent="Material3TextWithDrawable">
        <item name="chipIconTint">@color/md_theme_dark_outline</item>
    </style>
</resources>